{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "lib": [],
    "paths": {
      "src/*": ["./src/*"],
      "domains/*": ["./src/domains/*"]
    },
    "outDir": "./dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "exclude": ["node_modules"]
}
